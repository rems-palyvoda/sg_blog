<div class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "SG_BLOG", root_path, class: "navbar-brand" %>
    </div>

    <% if logged_in? %>
      <div class="nav navbar-nav navbar-right login-links">
        <%= link_to "Log out", logout_path, method: "delete" %><br>
        <%= link_to "My profile", @current_user %>
      </div>
      <div class="nav navbar-nav navbar-right">
        <%= button_to "New Post", new_post_path, method: :get, class: "btn btn-default navbar-btn" %>
      </div>
    <% else %>
      <div class="nav navbar-nav navbar-right login-links">
        <%= link_to "Sign up", new_user_path %><br>
        <%= link_to "Sign in", login_path %>
      </div>

    <% end %>


  </div>
</div>