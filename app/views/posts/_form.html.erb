<%= form_for @post do |f| %>
 
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2>Sorry, your post is not valid. Please, try again.</h2>
    </div>
  <% end %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
 
<!--   <p>
    <%= f.submit  %>
  </p> -->
  
  <p>
    <%= if  current_page?(new_post_path)
      f.submit "Create new post"
    else 
      f.submit "Update existing post" 
    end %>

  </p> 
<% end %>